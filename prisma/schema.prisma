
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  name           String
  email          String @unique
  passwordHash   String
  emailEncrypted String
  bioEncrypted   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}